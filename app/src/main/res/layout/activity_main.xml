<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nhapSoA"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="91dp"
            android:hint="hint" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nhapSoB"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="91dp"
            android:hint="hint" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hienKetQua"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="91dp"
            android:hint="hint" />

        <Button
            android:id="@+id/tong2So"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="140dp"
            android:text="Tổng 2 số " />

        <Button
            android:id="@+id/hieu2So"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="153dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="151dp"
            android:text="Hiệu 2 số" />

        <Button
            android:id="@+id/tich2So"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="153dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="150dp"
            android:text="Tích 2 số" />

        <Button
            android:id="@+id/thuong2So"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Thương 2 số" />
    </LinearLayout>

</LinearLayout>